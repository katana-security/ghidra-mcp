<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 
        http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    
    <id>ghidra-extension</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <!-- Copy extension files to GhidraMCP/ directory -->
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>extension.properties</include>
                <include>Module.manifest</include>
            </includes>
            <outputDirectory>GhidraMCP</outputDirectory>
        </fileSet>
    </fileSets>
    
    <dependencySets>
        <!-- Include the main project JAR as GhidraMCP.jar -->
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>GhidraMCP/lib</outputDirectory>
            <outputFileNameMapping>GhidraMCP.jar</outputFileNameMapping>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>
</assembly>
